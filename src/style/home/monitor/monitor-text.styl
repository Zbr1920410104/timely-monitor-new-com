.home-monitor-text-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;

  .title-box {
    font-size: 16px;
    padding-top: 10px;
    padding-bottom: 10px;
    text-align: center;
    background: rgb(51, 68, 84);
    border-bottom: 1px solid #ddd;
    color: #fff;
    width: 100%;
  }

  .description-box {
    width: 100%;

    .description-item-box {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      color: #f5222d;

      .item-text-box {
        width: 25%;
      }
    }
  }

  .button-box {
    padding-top: 20px;

    .button {
      background: #52c41a;
      border: 1px solid #52c41a;
    }
  }
}