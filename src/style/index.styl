.index-box {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(to left, #d3959b, #bfe6ba);

  .index-inner-box {
    width: 400px;
    display: flex;
    flex-direction: column;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.7);
    background: rgba(255, 255, 255, 0.7);
    padding: 40px 70px;

    .title-box {
      font-size: 24px;
      color: rgb(24, 144, 255);
      padding: 0 0 20px 20px;
    }
  }
}